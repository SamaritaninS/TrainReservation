@using Microsoft.AspNetCore.Identity
@model TrainReservation.ViewModels.ChangeRoleViewModel
@{
    ViewBag.Title = "Edit roles";
}

<h2>Changing roles for @Model.UserName</h2>

<form asp-action="EditRoles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
       
        @foreach (IdentityRole role in Model.AllRoles)
        {
            
            <input type="checkbox" position="static" id="@role.Name" name="roles" value="@role.Name" checked="checked" runat="server"
                    @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>