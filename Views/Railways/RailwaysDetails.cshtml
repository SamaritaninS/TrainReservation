@model TrainReservation.Models.Railways
@{
    ViewData["Title"] = "RailwaysDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Railway Details</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RailwaysNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RailwaysNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RailwaysName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RailwaysName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Source)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureDate)
        </dt>
        @{ 
            string departure = Model.DepartureDate.ToString().Substring(0, Model.DepartureDate.ToString().IndexOf(" ") + 1);
        }
        <dd class="col-sm-10">
            @departure
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartsOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartsOn)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivesOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivesOn)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EconomyNos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EconomyNos)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstNos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstNos)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PriceEconomy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriceEconomy)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PriceFirst)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriceFirst)
        </dd>

    </dl>
</div>
<hr />

<div>
    <a asp-action="ViewRailways">Back to Railways List</a>
</div>

